  <!-- 表格填写 -->
<script type="text/javascript">
  const name = new Array('ID','PAY TO', 'DUE DATE' ,'TYPE','PAYMENT METHOD' ,'AMOUNT','RECEIPT','STATUS');
  for(var i=0;i<name.length;i++){
      if(name[i]=='AMOUNT'){
          document.getElementById('t_head').innerHTML+=`<th id='amount'>${name[i]}</th>`;
      }
      else{
        document.getElementById('t_head').innerHTML+=`<th>${name[i]}</th>`;

      }
      // else{
      //     document.getElementById('t_head').innerHTML+=`<th><select><option>${name[i]}</option></select></th>`;
      // }
  }
</script>
  <script type="text/javascript">
  window.onload=function(){
